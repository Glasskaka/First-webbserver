<h2><%= author.name %> </h2>
<a class="button button-edit inline" href="/authors/<%= author.id %>/edit ">Edit</a>
<%- include("../partials/deleteForm", {url: `/authors/${author.id}`}) %> 
<% if (booksByAuthor.length > 0) {%> 
    <h2>Books By Author</h2>
    <% booksByAuthor.forEach(book => { %> 
        <a href="/books/<%= book.id %> ">
            <img height="150" width="100" src="<%= book.coverImagePath %>"> <!-- uses the virtual property -->
        </a>
    <% }) %> 
<% } else { %> 
    <h2>Author has no published books</h2> 
<% } %> 