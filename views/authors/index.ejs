<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %> ">
    <button type="submit">Search</button>
</form>
<% authors.forEach(author => { %> 
    <h3><%= author.name %></h3>
    <a class="button" href="/authors/<%= author.id %>">View</a>
    <a class="button button-edit" href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', {url: `/authors/${author.id}`}) %> 
<% }) %> 
