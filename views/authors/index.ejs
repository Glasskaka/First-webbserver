<h2 class="section-title">Authors</h2>
<form class="section-search search-authors" action="/authors" method="GET">
    <div>
        <input type="text" name="name" placeholder="Name here..." value="<%= searchOptions.name %>">
    </div>
    <button type="submit">Search</button>
</form>
<div class="section-list author-list">
    <% authors.forEach(author => { %> 
        <h3><%= author.name %></h3>
        <span class="buttons">
            <a id="view" class="button inline" href="/authors/<%= author.id %>">View</a>
            <a id="edit" class="button button-edit inline" href="/authors/<%= author.id %>/edit">Edit</a>
            <button type="button" id="open-modal" class="button-remove" onclick="openConfirm(this)">Delete</button>
        </span>
        <span style="display: none;" class="confirmModal">
            <strong>Are you sure?</strong>
            <%- include('../partials/deleteForm', {url: `/authors/${author.id}`}) %>
            <button class="button-create" onclick="closeConfirm(this)">Go Back</button> 
        </span>   
    <% }) %> 
</div>

